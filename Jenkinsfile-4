pipeline {
    agent none
    stages {
        stage('Test') {
            matrix {
                agent {
                    docker { image "${DOCKER_IMAGE}" 
                            args '-u root:root'}
                }
                axes {
                    axis {
                        name 'DOCKER_IMAGE'
                        values 'nginx/nginx'
                    }
                }
                stages {
                    stage('Test') {
                        steps {
                            sh 'nginx -v'
                        }
                    }
                }
            }
        }
    }
}
